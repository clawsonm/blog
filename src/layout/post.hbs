{{#extend "layout"}}
	{{#content "page_header"}}
<h1 class="post--title">{{title}}</h1>
	{{/content}}

	{{#content "main"}}
<article class="post">
	<div class="post--info">
		<h4 class="post--info-author">{{author}}</h4>
		<p class="post--info-dates">Published: {{moment publishDate format="YYYY-MM-DD"}}  Modified: {{moment modifyDate format="YYYY-MM-DD"}}</p>
	</div>
	<div class="post--body">
		{{{contents}}}
	</div>
</article>
	{{/content}}

	{{#content "styles"}}
	<link rel="stylesheet" href="/css/posts.css" />
	{{/content}}
{{/extend}}